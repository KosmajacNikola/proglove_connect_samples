<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="sdk.scanner.proglove.de.proglovescannersdk">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            tools:ignore="GoogleAppIndexingWarning">
        <activity
                android:name=".ScannerIntentActivity"
                android:label="@string/title_activity_scanner_intent"
                android:launchMode="singleInstance"
                android:theme="@style/NoActionBarLight">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity> <!-- Important: this can not be "launchmode=singleInstance" - otherwise the pinning does not work -->
        <activity
                android:name=".DisplayIntentActivity"
                android:label="@string/title_activity_display_intent"
                android:launchMode="singleInstance"
                android:theme="@style/NoActionBarLight">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity> <!-- Important: this can not be "launchmode=singleInstance" - otherwise the pinning does not work -->
        <activity
                android:label="@string/title_activity_main"
                android:name=".ScannerActivity"
                android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayActivity"
            android:label="@string/title_activity_display"
            android:launchMode="singleInstance"
            android:theme="@style/NoActionBarLight">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>